<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <!--    tools:context=".MainActivity">-->

    <TextView
       android:id="@+id/rrExpression"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Выражение"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/rrResult"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="Результат"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:gravity="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rrCE"
                style="@style/ActionButtonStyle"
                android:text="CE"></TextView>
            <TextView
                android:id="@+id/rrOpen"
                style="@style/ActionButtonStyle"
                android:text="("></TextView>
            <TextView
                android:id="@+id/rrClosed"
                style="@style/ActionButtonStyle"
                android:text=")"></TextView>
            <TextView
                android:id="@+id/rrMinus"
                style="@style/ActionButtonStyle"
                android:text="-"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rr7"
                style="@style/NumberButtonStyle"
                android:text="7"></TextView>
            <TextView
                android:id="@+id/rr8"
                style="@style/NumberButtonStyle"
                android:text="8"></TextView>
            <TextView
                android:id="@+id/rr9"
                style="@style/NumberButtonStyle"
                android:text="9"></TextView>
            <TextView
                android:id="@+id/rrPluы"
                style="@style/ActionButtonStyle"
                android:text="+"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rr4"
                style="@style/NumberButtonStyle"
                android:text="4"></TextView>
            <TextView
                android:id="@+id/rr5"
                style="@style/NumberButtonStyle"
                android:text="5"></TextView>
            <TextView
                android:id="@+id/rr6"
                style="@style/NumberButtonStyle"
                android:text="6"></TextView>
            <TextView
                android:id="@+id/rrX"
                style="@style/ActionButtonStyle"
                android:text="x"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rr1"
                style="@style/NumberButtonStyle"
                android:text="1"></TextView>
            <TextView
                android:id="@+id/rr2"
                style="@style/NumberButtonStyle"
                android:text="2"></TextView>
            <TextView
                android:id="@+id/rr3"
                style="@style/NumberButtonStyle"
                android:text="3"></TextView>
            <TextView
                android:id="@+id/rrdividing"
                style="@style/ActionButtonStyle"
                android:text="/"></TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rr."
                style="@style/NumberButtonStyle"
                android:text="."></TextView>
            <TextView
                android:id="@+id/rr0"
                style="@style/NumberButtonStyle"
                android:text="0"></TextView>
            <TextView
                android:id="@+id/rrBack"
                style="@style/NumberButtonStyle"
                android:text="back"></TextView>
            <TextView
                android:id="@+id/rrequally"
                style="@style/ActionButtonStyle"
                android:text="="></TextView>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>
